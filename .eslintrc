{
    "rules": {
        "camelcase": 2,
        "curly": 2,
        "eqeqeq": 2,
        "indent": [2, 2],
        "new-cap": 2,
        "no-caller": 2,
        "no-invalid-regexp": 2,
        "no-irregular-whitespace": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-trailing-spaces": 2,
        "no-undef": 2,
        "no-unused-vars": 2,
        "no-use-before-define": 2,
        "quotes": [2, "single"],
        "semi": 2,
        "space-before-blocks": 2,
        "space-before-function-parentheses": 2,
        "wrap-iife": 2
    },
    globals: {
        "describe": true,
        "before": true,
        "after": true,
        "it": true
    },
    "ecmaFeatures": {
        "blockBindings": true
    },
    "env": {
        "browser": true,
        "node": true
    }
}
